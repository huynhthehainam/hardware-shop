{
    "name": "kafka-consumer-dev",
    "dockerComposeFile": [
        "../../docker-compose.yml",
        "docker-compose.yml"
    ],
    "service": "kafka-consumer",
    "workspaceFolder": "/consumer",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash",
                // ✅ Enable Copilot explicitly
                "github.copilot.enable": true
            },
            "extensions": [
                "ms-dotnettools.csdevkit",
                "ms-dotnettools.csharp",
                "ms-azuretools.vscode-docker",
                "eamodio.gitlens",
                "editorconfig.editorconfig",
                "formulahendry.dotnet-test-explorer",
                "ms-vscode.powershell",
                // ✅ Add Copilot & Copilot Chat
                "github.copilot",
                "github.copilot-chat",
                "redhat.vscode-xml"
            ]
        }
    },
    "postCreateCommand": "dotnet restore",
    // ✅ Mount host auth files to container for seamless Copilot login
    "mounts": [
        "source=${localEnv:HOME}/.config/github-copilot,target=/root/.config/github-copilot,type=bind,consistency=cached"
    ]
}