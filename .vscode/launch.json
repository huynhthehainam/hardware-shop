    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildApi",
            "program": "${workspaceFolder}/HardwareShop.WebApi/bin/Debug/net8.0/HardwareShop.WebApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/HardwareShop.WebApi",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Launch (Dev container)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildApi",
            "program": "${workspaceFolder}/HardwareShop.WebApi/bin/Debug/net8.0/HardwareShop.WebApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/HardwareShop.WebApi",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "DevContainer",
                "ASPNETCORE_URLS": "http://+:5000"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Socket client",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildSocketClient",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/HardwareShop.SocketClient/bin/Debug/net8.0/HardwareShop.SocketClient.dll",
            "args": [],
            "cwd": "${workspaceFolder}/HardwareShop.SocketClient",
            "stopAtEntry": false,
            // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Database Migration",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildDatabaseMigration",
            "program": "${workspaceFolder}/HardwareShop.DatabaseMigration/bin/Debug/net8.0/HardwareShop.DatabaseMigration.dll",
            "args": [],
            "cwd": "${workspaceFolder}/HardwareShop.DatabaseMigration",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": ".NET Core Kafka Consumer",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildKafkaConsumer",
            "program": "${workspaceFolder}/HardwareShop.KafkaConsumer/bin/Debug/net8.0/HardwareShop.KafkaConsumer.dll",
            "args": [],
            "cwd": "${workspaceFolder}/HardwareShop.KafkaConsumer",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": ".NET Core Kafka Consumer (Dev container)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildKafkaConsumer",
            "program": "${workspaceFolder}/HardwareShop.KafkaConsumer/bin/Debug/net8.0/HardwareShop.KafkaConsumer.dll",
            "args": [],
            "cwd": "${workspaceFolder}/HardwareShop.KafkaConsumer",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "DevContainer"
            }
        }
    ]
}